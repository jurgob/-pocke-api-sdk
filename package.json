{
  "name": "pocke-api-sdk",
  "version": "1.0.0",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "examples": "tsx src/examples.ts",
    "test": "vitest run --coverage --reporter=verbose",
    "typecheck": "tsc --noEmit",
    "cov:report": "npx http-server ./coverage --cors --port 8080",
    "lint": "eslint ./src --ext .ts",
    "all": "turbo run --continue typecheck test lint"
  },
  "author": {
    "name": "Jurgo Boemo",
    "url": "https://jurgo.me"
  },
  "license": "ISC",
  "description": "A TypeScript SDK for accessing the PokeAPI with type safety and comprehensive error handling",
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@vitest/coverage-v8": "^3.2.3",
    "eslint": "^9.29.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.1",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0",
    "vitest": "^3.2.3"
  },
  "dependencies": {
    "zod": "^3.25.62"
  },
  "packageManager": "npm@10.9.2"
}
